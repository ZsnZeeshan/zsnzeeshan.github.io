# frozen_string_literal: true
# This Gemfile defines the Ruby dependencies for the Jekyll site.
# It is used by Bundler inside the Docker container.

# Use the official RubyGems source
source "https://rubygems.org"

# Load gem dependencies from the project's .gemspec file
gemspec

# Add the GitHub Pages gem bundle
# This ensures the site uses the same Jekyll plugins and versions as GitHub Pages.
gem "github-pages", "~> 232"
